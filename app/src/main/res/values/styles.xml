<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBaseTheme" />

    <style name="tab_btn" parent="@style/btn">
        <item name="android:textSize">@dimen/txt_15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:paddingBottom">@dimen/pad_5dp</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="btn" >
        <item name="android:minWidth">1.0dip</item>
        <item name="android:minHeight">1.0dip</item>
    </style>
    <style name="editext_normal" >
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">@dimen/pad_10dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="spinner_reg" >
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">@dimen/pad_10dp</item>

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
